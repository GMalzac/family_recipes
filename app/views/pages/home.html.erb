<div id="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 30%, rgba(0,0,0,0.5) 50%), url(<%= image_path "daube-sanglier.jpg" %>);""">
  <div class="container">
    <div class="wrapper-center">
      <h1>Nos recettes de famille</h1>
      <input type="text" placeholder="Entrez une recette, un ingrédient, un utilisateur...">
      <%= link_to "Voir toutes les recettes", recipes_path %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <h2>Dernières recettes ajoutées</h2>
  </div>
  <div class="row">
    <div class="card-deck">
      <% @latest_recipes.each do |recipe| %>
        <div class="card">
          <%= link_to recipe_path(recipe) do %>
            <%= image_tag "placeholder", alt: "alttext", class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= recipe.name %></h5>
              <h6 class="card-title"><%= recipe.category %></h6>
              <p class="card-text"><%= recipe.creator.first_name %></p>
            </div>
            <div class="card-footer">
              <small class="text-muted">Last updated 3 mins ago</small>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h2>Un repas complet au hasard pour la 2!</h2>
  </div>
  <div class="row">
    <div class="card-deck">
      <div class="card">
        <%= link_to recipe_path(@random_starter.id) do %>
          <%= image_tag "placeholder", alt: "alttext", class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= @random_starter.name %> - <%= @random_starter.category %></h5>
            <p class="card-text"><%= @random_starter.creator.first_name %></p>
          </div>
        <% end %>
      </div>
      <div class="card">
        <%= link_to recipe_path(@random_main.id) do %>
          <%= image_tag "placeholder", alt: "alttext", class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= @random_main.name %> - <%= @random_main.category %></h5>
            <p class="card-text"><%= @random_main.creator.first_name %></p>
          </div>
        <% end %>
      </div>
      <div class="card">
        <%= link_to recipe_path(@random_desert.id) do %>
          <%= image_tag "placeholder", alt: "alttext", class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= @random_desert.name %> - <%= @random_desert.category %></h5>
            <p class="card-text"><%= @random_desert.creator.first_name %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
