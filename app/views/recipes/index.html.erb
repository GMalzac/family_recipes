<div class="container">
  <h1>Toutes les recettes</h1>
  <div class="row">
    <h2>Dernières recettes ajoutées</h2>
  </div>
  <div class="row">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe) do %>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-md-4">
              <%= image_tag "placeholder", alt: "alttext", class: "card-img" %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= recipe.name %> - <%= recipe.category %> de <%= recipe.creator.first_name %></h5>
                <p class="card-text"><%= recipe.description.truncate(150) %></p>
                <p class="card-text"><small class="text-muted">Créé le <%= recipe.created_at %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

