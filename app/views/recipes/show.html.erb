<div class="container">
  <h1><%= @recipe.name %></h1>
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <%= "****" %> - <%= pluralize(@recipe.comments.count, "comment")%>
      <%= image_tag "placeholder", alt: "alttext", class: "card-img-top" %>
    </div>
    <div class="col-xs-12 col-md-4">
      <h2>Ingredients</h2>
      <ul>
        <% @recipe.quantity_ingredients.each do |qandi| %>
          <li><%= qandi.quantities_and_ingredients %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <h2>Pr√©paration</h2>
      <p><%= @recipe.description %></p>
    </div>
    <div class="col-xs-12 col-md-4">
      <h2>Commentaires</h2>
        <ul>
          <% @recipe.comments.each do |comment| %>
            <li><%= comment.content %> from <%= comment.user.first_name %></li>
          <% end %>
        </ul>
    </div>
  </div>

</div>
